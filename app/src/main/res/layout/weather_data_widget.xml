<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">
    <RelativeLayout
        android:id="@+id/layout_row_one"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/widGet_weather_city"
            android:textStyle="bold"
            android:textSize="46dp"
            android:textColor="@color/colorAccent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/widGet_time"
            android:textSize="25.1314dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_row_two"
        android:layout_alignBottom="@id/layout_row_one"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/widGet_weather_img"
            android:layout_centerVertical="true"
            android:layout_width="49dp"
            android:layout_height="41dp" />
    <TextView
        android:textSize="36dp"
        android:layout_marginLeft="69dp"
        android:layout_centerVertical="true"
        android:id="@+id/widGet_weather_weather"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/widGet_weather_updateTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:textSize="13.1314dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/widGet_sunrise"
                android:textSize="20.1314dp"
                android:textColor="#f19e02"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/widGet_sunset"
                android:textSize="20.1314dp"
                android:textStyle="bold"
                android:textColor="#b2300e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>